<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-header">

    <h3 class="card-title">Income</h3>
  <span style="float:right"><%= link_to 'Add Income', new_income_path %></span>

  </div>
  <!-- /.card-header -->
  <div class="card-body p-0">
    <table class="table table-striped">
      <thead>
        <tr>
          <th style="width: 10px">SN</th>
          <th>Title</th>
          <th>Type</th>
        </tr>
      </thead>
      <tbody>
    
        <% @count = 0 %>
        <% @incomes.each do |income| %>
        <tr>
          <td><%= income.title %></td>
          <td><%= income.description %></td>
          <td><%= income.category_id %></td>
          <td><%= link_to 'Show', income %></td>
          <td><%= link_to 'Edit', edit_income_path(income) %></td>
          <td><%= link_to 'Destroy', income, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>

    </table>  
  <%= paginate @incomes %>


  </div>

</div>
