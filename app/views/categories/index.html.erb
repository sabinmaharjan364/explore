<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
      <th>Title</th>
      <th>Type</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title%></td>
        <td><%= category.type %></td>
          
       </tr>
    <% end %>
  </tbody>
</table>

